<templateSet group="iterations">
  <template name="fornb" value="for($TYPE$ $INDEX$ = 0; $INDEX$ &lt; $NUMBER$; $INDEX$++) {&#10;    $END$&#10;}" description="Iterate number" toReformat="true" toShortenFQNames="true">
    <variable name="TYPE" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="INDEX" expression="suggestIndexName()" defaultValue="" alwaysStopAt="true" />
    <variable name="NUMBER" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="GROOVY_STATEMENT" value="true" />
      <option name="JAVA_CODE" value="true" />
    </context>
  </template>
</templateSet>